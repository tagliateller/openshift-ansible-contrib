{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "KeyName": {
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "Vpc": {
      "Type": "String"
    },
    "Route53HostedZone": {
      "Type": "String"
    },
    "PublicHostedZone": {
      "Type": "String"
    },
    "AmiId": {
      "Type": "AWS::EC2::Image::Id"
    },
    "InstanceType": {
      "Type": "String",
      "Default": "m4.2xlarge"
    },
    "NodeRootVolSize": {
      "Type": "String",
      "Default": "50"
    },
    "NodeDockerVolSize": {
      "Type": "String",
      "Default": "25"
    },
    "NodeDockerVolType": {
      "Type": "String",
      "Default": "gp2"
    },
    "GlusterVolType": {
      "Type": "String",
      "Default": "gp2"
    },
    "GlusterVolSize": {
      "Type": "Number",
      "Default": "500"
    },
    "NodeUserData": {
      "Type": "String"
    },
    "NodeEmptyVolSize": {
      "Type": "String",
      "Default": "25"
    },
    "NodeEmptyVolType": {
      "Type": "String",
      "Default": "gp2"
    },
    "NodeRootVolType": {
      "Type": "String",
      "Default": "gp2"
    },
    "PublicHostedZone": {
      "Type": "String"
    },
    "NodeType": {
      "Type": "String",
      "Default": "gluster"
    },
    "GlusterNodeDns1": {
      "Type": "String"
    },
    "GlusterNodeDns2": {
      "Type": "String"
    },
    "GlusterNodeDns3": {
      "Type": "String"
    },
    "PrivateSubnet1": {
      "Type": "String"
    },
    "PrivateSubnet2": {
      "Type": "String"
    },
    "PrivateSubnet3": {
      "Type": "String"
    },
    "BastionSG": {
      "Type": "String"
    },
    "NodeSG": {
      "Type": "String"
    }
  },
  "Resources": {
    "Route53Records": {
      "Type": "AWS::Route53::RecordSetGroup",
      "DependsOn": [
        "GlusterNode1",
        "GlusterNode2",
        "GlusterNode3"
      ],
      "Properties": {
        "HostedZoneName": { "Ref": "Route53HostedZone" },
        "RecordSets": [
          {
            "Name":  {"Fn::Join": [".", [{"Ref": "GlusterNodeDns1"},{"Ref": "Route53HostedZone"}]]},
            "Type": "A",
	            "TTL": "300",
		    "ResourceRecords": [{ "Fn::GetAtt" : ["GlusterNode1", "PrivateIp"] }]
          },
          {
            "Name":  {"Fn::Join": [".", [{"Ref": "GlusterNodeDns2"},{"Ref": "Route53HostedZone"}]]},
            "Type": "A",
	            "TTL": "300",
		    "ResourceRecords": [{ "Fn::GetAtt" : ["GlusterNode2", "PrivateIp"] }]
          },
          {
            "Name":  {"Fn::Join": [".", [{"Ref": "GlusterNodeDns3"},{"Ref": "Route53HostedZone"}]]},
            "Type": "A",
	            "TTL": "300",
		    "ResourceRecords": [{ "Fn::GetAtt" : ["GlusterNode3", "PrivateIp"] }]
          }
        ]
      }
    },
    "GlusterSG": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "CRS Gluster SG",
        "VpcId": { "Ref": "Vpc" },
        "Tags": [ {"Key": "Name", "Value": "gluster_crs_sg"} ]
      }
    },
    "GlusterDaemon": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "24007",
        "ToPort": "24007",
        "SourceSecurityGroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] }
      }
    },
    "ClientDaemon": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "24007",
        "ToPort": "24007",
        "SourceSecurityGroupId": { "Ref": "NodeSG" }
      }
    },
    "GlusterManagement": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "24008",
        "ToPort": "24008",
        "SourceSecurityGroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] }
      }
    },
    "GlusterConnect": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "24008",
        "ToPort": "24008",
        "SourceSecurityGroupId": { "Ref": "NodeSG" }
      }
    },
    "BastionSsh": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "22",
        "ToPort": "22",
        "SourceSecurityGroupId": {"Ref": "BastionSG" }
      }
    },
    "GlusterCommonSsh": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "22",
        "ToPort": "22",
        "SourceSecurityGroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] }
      }
    },
    "GlusterSsh": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "2222",
        "ToPort": "2222",
        "SourceSecurityGroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] }
      }
    },
    "GlusterWeb": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "8080",
        "ToPort": "8080",
        "SourceSecurityGroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] }
      }
    },
    "GlusterWebFromNode": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "8080",
        "ToPort": "8080",
        "SourceSecurityGroupId": { "Ref": "NodeSG" }
      }
    },
    "GlusterNfs": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "49152",
        "ToPort": "49664",
        "SourceSecurityGroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] }
      }
    },
    "ClientGlusterNfs": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties":{
        "GroupId": { "Fn::GetAtt": [ "GlusterSG", "GroupId" ] },
        "IpProtocol": "tcp",
        "FromPort": "49152",
        "ToPort": "49664",
        "SourceSecurityGroupId": { "Ref": "NodeSG" }
      }
    },
    "GlusterNode1" : {
       "Type" : "AWS::EC2::Instance",
       "Properties" : {
          "ImageId" : {"Ref": "AmiId"},
          "UserData": {"Ref": "NodeUserData"},
          "KeyName" : {"Ref": "KeyName"},
	  "InstanceType": {"Ref": "InstanceType"},
	  "SecurityGroupIds": [{ "Fn::GetAtt" : ["GlusterSG", "GroupId"] }],
          "SubnetId" : {"Ref": "PrivateSubnet1"},
          "Tags": [
            { "Key": "Name",
              "Value": {"Fn::Join": [".", [{"Ref": "GlusterNodeDns1"},{"Ref": "PublicHostedZone"}]]}
            },
            { "Key": "StorageType",
              "Value": "crs"
            }
          ],
          "BlockDeviceMappings" : [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "DeleteOnTermination": "true",
              "VolumeSize": {"Ref": "NodeRootVolSize"},
              "VolumeType": {"Ref": "NodeRootVolType"}
            }
          },
          {
            "DeviceName": "/dev/xvdb",
            "Ebs": {
              "DeleteOnTermination": "true",
              "VolumeSize": {"Ref": "GlusterVolSize"},
              "VolumeType": {"Ref": "GlusterVolType"}
            }
          }
         ]
     }
   },
    "GlusterNode2" : {
       "Type" : "AWS::EC2::Instance",
       "Properties" : {
          "ImageId" : {"Ref": "AmiId"},
          "UserData": {"Ref": "NodeUserData"},
          "KeyName" : {"Ref": "KeyName"},
	  "InstanceType": {"Ref": "InstanceType"},
	  "SecurityGroupIds": [{ "Fn::GetAtt" : ["GlusterSG", "GroupId"] }],
          "SubnetId" : {"Ref": "PrivateSubnet2"},
          "Tags": [
            { "Key": "Name",
              "Value": {"Fn::Join": [".", [{"Ref": "GlusterNodeDns2"},{"Ref": "PublicHostedZone"}]]}
            },
            { "Key": "StorageType",
              "Value": "crs"
            }
          ],
          "BlockDeviceMappings" : [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "DeleteOnTermination": "true",
              "VolumeSize": {"Ref": "NodeRootVolSize"},
              "VolumeType": {"Ref": "NodeRootVolType"}
            }
          },
          {
            "DeviceName": "/dev/xvdb",
            "Ebs": {
              "DeleteOnTermination": "true",
              "VolumeSize": {"Ref": "GlusterVolSize"},
              "VolumeType": {"Ref": "GlusterVolType"}
            }
          }
         ]
     }
   },
    "GlusterNode3" : {
       "Type" : "AWS::EC2::Instance",
       "Properties" : {
          "ImageId" : {"Ref": "AmiId"},
          "UserData": {"Ref": "NodeUserData"},
          "KeyName" : {"Ref": "KeyName"},
	  "InstanceType": {"Ref": "InstanceType"},
	  "SecurityGroupIds": [{ "Fn::GetAtt" : ["GlusterSG", "GroupId"] }],
          "SubnetId" : {"Ref": "PrivateSubnet3"},
          "Tags": [
            { "Key": "Name",
              "Value": {"Fn::Join": [".", [{"Ref": "GlusterNodeDns3"},{"Ref": "PublicHostedZone"}]]}
            },
            { "Key": "StorageType",
              "Value": "crs"
            }
          ],
          "BlockDeviceMappings" : [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "DeleteOnTermination": "true",
              "VolumeSize": {"Ref": "NodeRootVolSize"},
              "VolumeType": {"Ref": "NodeRootVolType"}
            }
          },
          {
            "DeviceName": "/dev/xvdb",
            "Ebs": {
              "DeleteOnTermination": "true",
              "VolumeSize": {"Ref": "GlusterVolSize"},
              "VolumeType": {"Ref": "GlusterVolType"}
            }
          }
         ]
     }
   }
 }
}
